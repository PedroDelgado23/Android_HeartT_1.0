<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fime_proandr.heart.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enc_principal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/texto_1" />

    <TextView
        android:id="@+id/Texto"
        android:text="@string/Texto_cambiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/texto_1"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Dato_1"
        android:layout_below="@+id/Texto"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_boton"
        android:layout_marginBottom="37dp"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_boton1"
        android:layout_above="@+id/button2"
        android:layout_alignParentEnd="true"
        android:id="@+id/button" />


</RelativeLayout>
